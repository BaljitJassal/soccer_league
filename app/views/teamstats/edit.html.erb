<ul class="breadcrumb">
  <li><%= link_to "#{@league.name} (#{@league.year})", "/leagues/#{@league.id}" %><span class="divider">/</span></li>
  <li class="active"><%= "Edit #{@teamstat.team_name} Roster" %></li>
</ul>

<h3>Add some people to the roster</h3>
<p>
  <%= form_for(@teamstat, :html => {:class => "well form-horizontal"}) do |f| %>
  <div class="alert">Start typing a person's name. Then click their name to add them to the Roster.</div>
  <div class="control-group">
    <div class="controls"><%= f.text_field :person_tokens, "data-pre" => @teamstat.person_tokens.to_json %></div>
  </div>


      <div class="form-actions">
        <%= f.submit "Update Roster", :class => "btn" %>
        <%= link_to "Cancel", "/teamstats/#{@teamstat.id}", :class => "btn" %>
      </div>
    <% end %>
</p>