<h1>Player Repository</h1>
<div class="alert">Players careers span often span multiple teams and leagues. Manage basic player profile information here.</div>

<div class="btn-group">
  <% if can? :new, @player %>
      <%= link_to "New Player", "players/new", :class => "btn" %>
  <% end %>
</div>

<%= form_tag players_path, :method => 'get', :remote => true, :id => "players_search", :class => "form-search" do %>
  <p>
    <%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
    <%= submit_tag "Search", :class => "btn" %>
  </p>
<% end %>
<div id="players">
  <%= render 'player' %>
</div>

