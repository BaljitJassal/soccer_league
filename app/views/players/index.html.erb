<h1>Player Repository</h1>
<div class="flash notice">Players careers span often span multiple teams and leagues. Manage basic player profile information here.</div>
<% if signed_in? %>
<div class="actions">
  <nav class="round">
    <ul>
      <li><%= link_to "New Player", "players/new", :class => "action_button round" %></li>
    </ul>
  </nav>
</div>
<% end %>

<%= form_tag players_path, :method => 'get' do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= will_paginate %>
<table id="players_table" class="grid_shaded">
<tr>
<th title="Name">Name</th>
<th title="Position">Position</th>
<th title="Nationality">Nationality</th>
</tr>
  <%= render @players %>
</table>
<%= will_paginate %>
