<h1>New player</h1>

<%= form_for(@player) do |f| %>
  <%= render 'shared/error_messages_player', :object => f.object %>
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>

    <%= f.label :lastname %>
    <%= f.text_field :lastname %>

    <%= f.label :position %>
    <%= f.select(:position, Player::POSITIONS) %>

    <%= f.label :birth_date %>
    <%= f.text_field :birth_date %>

    <%= f.label :nationality %>
    <%= f.select(:nationality, Carmen::countries.unshift(["Choose...", ""]) ) %>

    <%= f.label :height %>
    <%= f.text_field :height%>

    <%= f.label :birth_nation %>
    <%= f.select(:birth_nation, Carmen::countries.unshift(["Choose...", ""]) ) %>

    <%= f.label :birth_city %>
    <%= f.text_field :birth_city%>

<div class="actions">
    <%= f.submit "Create", :class => "btn" %>
    <input type="button" id="cancelPlayerNew" value="Cancel" class="btn" />
  </div>
<% end %>