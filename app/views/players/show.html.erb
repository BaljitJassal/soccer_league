
<h1><%= @player.firstname %> <%= @player.lastname %></h1>

<div class="actions">
  <nav class="round">
    <ul>
      <% if can? :new, @player %>
        <li><%= link_to "Edit", "#{@player.id}/edit", :class => "action_button round"  %></li>
        <li><%= link_to "Add Player", "/players/new", :class => "action_button round" %></li>
      <% end %>
      <li><%= link_to "All Players", players_path, :class => "action_button round" %></li>
    </ul>
  </nav>
</div>


  <div class="field">
    <label>Position </label>
    <span><%= @player.position %> </span>
  </div>
  <div class="field">
    <label>Birth Date </label>
    <span><%= @player.birth_date %> </span>
  </div>
  <div class="field">
    <label>Nationality </label>
    <span><%= @player.nationality %> </span>
  </div>
  <% if @player.height %>
    <div class="field">
      <label>Height</label>
      <span><%= @player.height %> m </span>
    </div>
  <% end %>

<div>
<strong>Playerstats count: </strong> <%= @player.playerstats.count %>
<div>TODO roll these stats into a per league/year calculation</div>

<div class="audit">Created by: <%= @player.created_by.username %></div>

</div>




