<tr>
<td><%= link_to playerstat.team.name, "../teams/" + playerstat.team.id.to_s %> </td>
<td><%= link_to "#{playerstat.person.firstname} #{playerstat.person.lastname}", "../people/" + playerstat.person.id.to_s %> </td>
<td><%= playerstat.goals %></td>
<td><%= playerstat.assists %></td>
<td><%= playerstat.shots %></td>
<td><%= playerstat.fouls %></td>
<td><%= playerstat.yellow_cards %></td>
<td><%= playerstat.red_cards %></td>
<td><%= playerstat.minutes %></td>
<td><%= playerstat.saves %></td>
<td><%= playerstat.jersey_number %></td>
<% if can? :new, @game and !@game.completed %>
<td>
    <%= link_to "Remove", playerstat, :method => :delete,
                                     :confirm => "Remove this person?",
                                      :id => "remove_person",
                                      :title => "Remove",
                                     :class => "btn btn-danger" %>
</td>
<% end %>
</tr>


