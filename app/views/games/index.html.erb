<h3><%= link_to "#{@league.name} (#{@league.year})", "/leagues/#{@league.id}" %> - All Games </h3>

<div class="btn-group">
  <% if can? :new, @game %>
      <%= link_to "Create Game", new_league_game_path(@league), :class => "btn" %>
  <% end %>
</div>
<%= will_paginate %>
<table id="games_table" class="table table-condensed">
<tr>
<th title="Game">Game</th>
<th title="Completed">Completed</th>
</tr>
  <%= render @games %>
</table>
<%= will_paginate %>
