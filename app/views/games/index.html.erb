<h3><%= link_to "#{@league.name} (#{@league.year})", "/leagues/#{@league.id}" %> - All Games </h3>

<div class="actions">
  <nav class="round">
    <ul>
      <% if can? :new, @game %>
        <li><%= link_to "Create Game", new_league_game_path(@league), :class => "action_button round" %></li>
      <% end %>
    </ul>
  </nav>
</div>

<%= will_paginate %>
<table id="games_table" class="grid_shaded">
<tr>
<th title="Game">Game</th>
<th title="Completed">Completed</th>
</tr>
  <%= render @games %>
</table>
<%= will_paginate %>
