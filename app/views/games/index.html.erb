<ul class="breadcrumb">
  <li><%= link_to "#{@league.name} (#{@league.year})", "/leagues/#{@league.id}" %><span class="divider">/</span>
  </li>
  <li class="active">All Games</li>
</ul>

<div class="btn-group">
  <% if can? :new, @game %>
      <%= link_to "Create Game", new_league_game_path(@league), :class => "btn" %>
  <% end %>
</div>
<%= will_paginate %>
<table id="games_table" class="table table-condensed">
<tr>
<th title="Game">Game</th>
<th title="Completed">Status</th>
</tr>
  <%= render @games %>
</table>
<%= will_paginate %>
