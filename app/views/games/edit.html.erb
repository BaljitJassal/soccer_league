<ul class="breadcrumb">
  <li><%= link_to "View Game", "/games/#{@game.id}"  %><span class="divider">/</span></li>
  <li class="active"><%= "Edit Game: #{@game.visiting_team.name} at #{@game.home_team.name}" %></li>
</ul>


<h2 class="game indent1">Game: <%= "#{@game.visiting_team.name} vs #{@game.home_team.name}" %></h2>

<%= form_for(@game) do |f| %>
  <%= render 'shared/error_messages_game', :object => f.object %>

  <div class="row">
    <div class="span2"><%= f.label :completed, :class => "control-label" %></div>
    <div class="span10"><%= f.check_box :completed %></div>
  </div>

  <% unless @game.playerstats.empty? %>
    <table id="playerstats_table" class="table table-condensed">
    <tr>
    <th title="Club">Club</th>
    <th title="Player">Player</th>
    <th title="Goals">Goals</th>
    <th title="Assists">Assists</th>
    <th title="Shots">Shots</th>
    <th title="Fouls">Fouls</th>
    <th title="Cautions">Cautions</th>
    <th title="Ejections">Ejections</th>
    <th title="Minutes">Minutes</th>
    <th title="Saves">Saves</th>
    <th title="Jersey Number">Jersey</th>
    </tr>
      <%= render "playerstat_fields", :f => f %>
    </table>
  <% end %>  


  <div class="actions">
    <%= f.submit "Update", :class => "btn" %>
    <input type="button" id="cancelGameEdit" value="Cancel" class="btn"/>
  </div>
<% end %>

