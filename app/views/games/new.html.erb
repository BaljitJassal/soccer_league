<ul class="breadcrumb">
  <li><%= link_to "#{@game.league.name} (#{@game.league.year})", "/leagues/#{@game.league.id}" %><span class="divider">/</span></li>
  <li><%= link_to "All Games", league_games_path(@game.league) %><span class="divider">/</span></li>
  <li class="active">Create Game</li>
</ul>

<%= form_for [@league, @game], :html => {:class => "well form-horizontal"} do |f| %>
  <%= render 'shared/error_messages_game', :object => f.object %>

  <div class="control-group">
    <%= f.label :visiting_team, :class => "control-label" %>
    <div class="controls"><%= f.select :team1_id, Teamstat.where(:league_id => @league).collect { |t| [ t.team.name, t.team_id ] } %></div>
  </div>

  <div class="control-group">
    <%= f.label :home_team, :class => "control-label" %>
    <div class="controls"><%= f.select :team2_id, Teamstat.where(:league_id => @league).collect { |t| [ t.team.name, t.team_id ] } %></div>
  </div>

  <div class="form-actions">
    <%= f.submit "Create Game", :class => "btn" %>
    <%= link_to "Cancel", league_games_path, :class => "btn" %>
  </div>
<% end %>
