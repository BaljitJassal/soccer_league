<h1 class="leagues"><%= link_to "Leagues", leagues_path %></h1>
<h1 class="league indent1"><%= "#{@league.name} (#{@league.year})" %></h1>

<div class="actions">
  <nav class="round">
    <ul>
      <% if can? :new, @league %>
        <li><%= link_to "Edit League", "#{@league.id}/edit", :class => "action_button round" %></li>
        <li><%= link_to "Add Team", new_league_teamstat_path(@league), :class => "action_button round" %></li>
        <% unless @teamstats.size < 2 %>
        <li><%= link_to "Create Game", new_league_game_path(@league), :class => "action_button round" %></li>

        <% end %>
      <% end %>
      <% unless @league_games_size < 1 %>
      <li><%= link_to "View Games", league_games_path(@league), :class => "action_button round" %></li>
      <% end %>
    </ul>
  </nav>
</div>

<div>
<div class="alert">Teams in this league: <%= @league.teamstats.count %></div>


<% unless @teamstats.empty? %>
  <table id="league_table" class="table table-condensed">
  <tr>
  <th title="Club">Club</th>
  <th title="Points">PTS</th>
  <th title="Games Played">GP</th>
  <th title="Wins">W</th>
  <th title="Losses">L</th>
  <th title="Ties">T</th>
  <th title="Goals For">GF</th>
  <th title="Goals Against">GA</th>
  </tr>
    <%= render @teamstats %>
  </table>
<% end %>


</div>


